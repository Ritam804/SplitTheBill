<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rr_content"

        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:weightSum="4"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="right"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miss Leanne"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/chat_personname"
                android:layout_marginBottom="5dp"
                android:textSize="10sp"
                android:visibility="visible"
                />

            <RelativeLayout
                android:layout_below="@+id/chat_personname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_corner"
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:src="@drawable/corner_grey"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sender Message"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/mesg_roundedcorner_gery"
                    android:layout_toLeftOf="@+id/iv_corner"
                    android:padding="10dp"
                    android:id="@+id/chat_messagtext"/>

            </RelativeLayout>



        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="22:10"
        android:id="@+id/chat_date"
        android:layout_below="@id/rr_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:gravity="top"
        android:textSize="8sp"
        android:paddingTop="2dp"
        />



    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@xml/progress"
        android:visibility="gone"/>

</RelativeLayout>