<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2A2A"

    tools:context="com.ritam.splitthebill.splitthebill.activity.ReverseGuest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_arrow"
                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Reserve a Guest list"
            android:textColor="#9E9E9E"
            android:textSize="16sp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:orientation="vertical"
        >

        <customTextView.AvenirHeavyEditTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:text="Jhone"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9E9E9E"
            android:layout_alignParentBottom="true"
            />


        <customTextView.AvenirHeavyEditTextView
            android:id="@+id/tv_surname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:text="Doe"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"

            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9E9E9E"
            android:layout_alignParentBottom="true"
            />
        
        <LinearLayout
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <customTextView.AvenirHeavyTextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:text="ADD PEOPLE    "
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <customTextView.AvenirHeavyTextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:text="+"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scrollbars="none"
            ></android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/rl_done"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="DONE"
                android:textColor="@drawable/text_selecter"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_selector"
                android:textSize="16sp"/>

        </RelativeLayout>







    </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@xml/progress"
        android:visibility="gone"/>

</RelativeLayout>
