<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_white_row_background_selector"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:weightSum="4"

        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            >

            <ImageView
                android:id="@+id/iv_userimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/message_demo_image"/>

            <customTextView.AvenirHeavyTextView
                android:id="@+id/tv_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="HOST"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_userimage"
                android:visibility="gone"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"

            >


            <customTextView.AvenirLightTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Loura Curter"
                android:textColor="#444549"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/tv_eventdate"
                />


            <TextView
                android:id="@+id/tv_eventdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:paddingRight="9dp"
                android:text="25 April 2017 10:09am"
                android:textColor="#444549"
                android:singleLine="true"
                android:textSize="9sp"/>

            <customTextView.AvenirHeavyTextView
                android:id="@+id/title"
                android:layout_below="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some is lorem events"
                android:textColor="#444549"
                android:textSize="14sp"
                android:singleLine="true"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <RatingBar
                android:id="@+id/rating"
                android:layout_below="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:rating="5"
                style="@style/StarRatingBar"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:isIndicator="true"/>

            <RelativeLayout
                android:layout_below="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">

                <customTextView.AvenirLightTextView
                    android:id="@+id/tv_tablename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Table Name"
                    android:textSize="10sp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_tableno"
                    android:layout_toRightOf="@+id/tv_tablename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

                <customTextView.AvenirLightTextView
                    android:id="@+id/tv_splits"
                    android:layout_toRightOf="@+id/tv_tableno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Splits"
                    android:textSize="10sp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_splitscount"
                    android:layout_toRightOf="@+id/tv_splits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

                <customTextView.AvenirLightTextView
                android:id="@+id/tv_paid"
                    android:layout_toRightOf="@+id/tv_splitscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Paid"
                    android:textSize="10sp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_toRightOf="@+id/tv_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="$ 200"
                    android:textSize="11sp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ECEDF1"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>

