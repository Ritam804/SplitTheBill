<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">

        <customTextView.AvenirMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/ll_back_review">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_mold_rectangle"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        >

        <RatingBar
            android:id="@+id/rating_bar_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StarRatingBar"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/white_mold_rectangle"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="10dp">


            <EditText
                android:id="@+id/et_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Write your review"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:background="@null"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_submit_review"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <customTextView.AvenirMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textColor="@drawable/text_selecter"
                android:textSize="17sp"/>

        </LinearLayout>


    </LinearLayout>



    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@xml/progress"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>
