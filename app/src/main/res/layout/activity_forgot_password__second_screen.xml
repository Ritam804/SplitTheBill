<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.ritam.splitthebill.splitthebill.activity.ForgotPassword_SecondScreen"

    >


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >

        <LinearLayout
            android:id="@+id/ll_back_changepass"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_arrow"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/headertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#9E9E9E"
            android:text="Change Password"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9E9E9E"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">

            <customTextView.AvenirHeavyEditTextView
                android:id="@+id/et_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Verification Code"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18sp"
                android:background="@null"
                android:textCursorDrawable="@drawable/curser"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9E9E9E"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">

            <customTextView.AvenirHeavyEditTextView
                android:id="@+id/newpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="New Password"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18sp"
                android:background="@null"
                android:textCursorDrawable="@drawable/curser"
                android:inputType="textPassword"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9E9E9E"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">

            <customTextView.AvenirHeavyEditTextView
                android:id="@+id/confirmnewpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Confirm New Password"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18sp"
                android:background="@null"
                android:textCursorDrawable="@drawable/curser"
                android:inputType="textPassword"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9E9E9E"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/submit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_donetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@drawable/text_selecter"
                android:textSize="16sp"/>

        </LinearLayout>


    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@xml/progress"
        android:visibility="gone"/>


</RelativeLayout>
